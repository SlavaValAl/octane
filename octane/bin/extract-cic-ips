#!/usr/bin/python

import yaml
import sys


ADDR_TYPE = {
    'br-ex': 'public_address',
    'br-mgmt': 'internal_address',
}


def load_yaml(filename):
    with open(filename, 'r') as f:
        return yaml.safe_load(f.read())


def main():
    filename = sys.argv[1]
    bridge = sys.argv[2]
    settings = load_yaml(filename)

    ips = [node[ADDR_TYPE[bridge]] for node in settings['nodes']
           if node['role'] in ('primary-controller', 'controller')]

    for ip in ips:
        print ip


if __name__ == '__main__':
    main()

